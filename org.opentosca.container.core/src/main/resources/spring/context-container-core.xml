<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">
  <description>
    Configuration for Spring-Bean service discovery across container.core
  </description>


  <context:component-scan base-package="org.opentosca.container.core.impl.plan" />
  <context:component-scan base-package="org.opentosca.container.core.impl.service" />
  <context:component-scan base-package="org.opentosca.container.core.service.impl" />
  <context:component-scan base-package="org.opentosca.container.core.engine.impl" />

  <bean class="org.opentosca.container.core.engine.xml.impl.XMLSerializerServiceImpl" />

</beans>
